<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mycounterObj="clr-namespace:WpfApplication2.Entity"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <mycounterObj:MyCounter1 x:Key="CounterObj" ></mycounterObj:MyCounter1>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="23" Margin="78,95,0,0" TextWrapping="Wrap" Text="{Binding Counter, Mode=OneWay, Source={StaticResource CounterObj}}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnIncrement" Content="Increment" HorizontalAlignment="Left" Margin="224,94,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CommandCounterAction, Mode=OneWay, Source={StaticResource CounterObj}}"/>

    </Grid>
    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{Binding CommandCounterAction, Mode=OneWay, Source={StaticResource CounterObj}}"></KeyBinding>
        
    </Window.InputBindings>
</Window>
